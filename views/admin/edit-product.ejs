<!-- HEADER LINKS INCLUDE -->
<%- include('../includes/header.ejs') %>   

<!-- NAVBAR -->
<%- include('../includes/nav.ejs'); %>

	<div class="container">
		<h1 class="text-center">Edit Product</h1>
    <br>
		<div class="row">
			<div class="col-sm-2"></div>
				<div class="col-sm-8">
					<div class="card" style="background-color:#E9ECEF;">
						<div class="card-body">
							<form action="/admin/edit-product" method="POST">
								<div class="form-group">
									<label><b>Product Title</b></label>
									<input type="text" class="form-control" name="title" value="<%= product.title %>">
								</div>
								<div class="form-group">
									<label><b>Image</b></label>
									<input type="text" class="form-control" name="image" value="<%= product.image %>">
								</div>
								<div class="form-group">
									<label><b>Price</b></label>
									<input type="number" class="form-control" name="price" step="0.01" value="<%=product.price%>">
								</div> 
								<div class="form-group">
									<label><b>Product Description</b></label>
									<textarea class="form-control" name="description" rows="3"><%= product.description %></textarea>
           					     </div>
								
								<!-- HIDDEN INPUT FIELD FOR PRODUCT ID -->
								<input type="hidden" name="productId" value="<%= product._id %>">
								<input type="hidden" name="_csrf" value="<%= csrfToken %>">	
								<button class="btn btn-primary btn-block mybtn-corner" type="submit">Update</button>
							</form>
						</div>
					</div>
				</div>
			<div class="col-sm-2"></div>
		</div>
	</div>

    


<!-- FOOTER -->
<%- include('../includes/footer.ejs') %>