<!-- HEADER LINKS INCLUDE -->
<%- include('../includes/header.ejs') %>   

<!-- NAVBAR -->
<%- include('../includes/nav.ejs'); %>

<div class="container">
    <% if(orders.length > 0){ %>
    <h1>Orders</h1><br>
    <% } %>

    <div class="row">
        <div class="col-sm-8">
            <% if(orders.length > 0) { %>
                <% for(order of orders){ %>
                    <div class="card shadow p-2 mb-3 bg-white">
                        <div class="card-body ">
                            <h6><b>Order No : #<%= order._id %></b></h6>
                            <span>Time : <%=order.time %></span>
                            <span class="float-right"><%= order.date %></span>
                             <ul class="list-group">
                                <% for (product of order.products) { %>
                                <li class="list-group-item"><%= product.data.title %> <span class="float-right">Quantity : <%=product.qty%></span></li>
                                <% } %>
                                <a class="text-primary text-right" style="margin-top:2px;" href="orders/<%= order._id %>"><b>Invoice</b></a>
                             </ul>
                        </div>
                    </div>
                <% } %>
            <% } %>

        </div>
        <div class="col-sm-1"><br></div>
        <div class="col-sm-3"></div>
    </div>

     <% if(orders.length <= 0){ %>
        <img src="/images/empty-orders.png" class="mx-auto d-block" width="295" height="235"><br>
        <h3 class="text-muted text-center">No Orders Yet</h3>
     <% } %>   

</div>


 <%- include('../includes/footer.ejs') %>   