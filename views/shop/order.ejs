<!-- HEADER LINKS INCLUDE -->
<%- include('../includes/header.ejs') %>   

<!-- NAVBAR -->
<%- include('../includes/nav.ejs'); %>

<div class="container">
    <h1>Orders</h1><br>
    <div class="row">
        <div class="col-sm-8">
            <% if(orders.length > 0) { %>
                <% for(order of orders){ %>
                    <div class="card shadow p-2 mb-3 bg-white">
                        <div class="card-body ">
                            <h6><b>Order No : #<%= order._id %></b></h6>
                            <span>Time : <%=order.time %></span>
                            <span class="float-right"><%= order.date %></span>
                             <ul class="list-group">
                                <% for (product of order.products) { %>
                                <li class="list-group-item"><%= product.data.title %> <span class="float-right">Quantity : <%=product.qty%></span></li>
                                <% } %>
                             </ul>
                        </div>
                    </div>
                <% } %>
            <% }  else {%>
                <div>
                    <h2 class="text-center">No Orders Now </h2>
                </div>   
               <% }%>      
        </div>
        <div class="col-sm-1"><br></div>
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="text-center">Last Order</h5><hr>

                </div>
            </div>
        </div>
    </div>
</div>


